<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3"> 
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" class="form-control" placeholder="Add a catchy title" type="text" required>
                <div class="valid-feedback">Title added</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="description" class="form-control" type="text" required></textarea>
                <div class="valid-feedback">Description added</div>
            </div>
            
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" placeholder="enter image URL/Link" class="form-control" type="text" >
            </div> -->

            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input name="listing[image]" class="form-control" type="file" required>
            </div>

            <div class="row">
                <div class="mb-3 col-mid-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" class="form-control" required>
                    <div class="invalid-feedback">Please enter Price</div>
                </div>
                <div class="mb-3 col-mid-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="enter country" class="form-control" type="text" required>
                    <div class="invalid-feedback">Please enter Country</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="enter location" class="form-control" type="text" required>
                <div class="invalid-feedback">Please enter Location</div>
            </div>
        
            <button class="btn btn-dark add-btn">ADD</button>
            <br><br>
        </form>
    </div>
</div>