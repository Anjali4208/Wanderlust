<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8">
        <h3>Edit Listing</h3>
        <form method="POST" novalidate class="needs-validation" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required>
                <div class="valid-feedback">Title added</div>

            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" type="text" required> <%= listing.description %></textarea>
                <div class="valid-feedback">Description added</div>
            </div>
            
            <div class="mb-3">
                <img class="col-2" src=" <%= originalImageUrl %> ">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input name="listing[image]" class="form-control" value="<%= listing.image %>" type="file">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" class="form-control" value="<%= listing.price %>"required>
                    <div class="invalid-feedback">Please enter Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text" required>
                    <div class="invalid-feedback">Please enter Country</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text" required>
                <div class="invalid-feedback">Please enter Location</div>
            </div>
            <br> <br>
            
            <button class="btn btn-dark edit-btn mt-3">EDIT</button>
        </form>
    </div>
</div>
